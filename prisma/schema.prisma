
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        String      @id @default(cuid())
  clerkId   String      @unique
  email     String      @unique
  name      String?
  plans     StudyPlan[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model StudyPlan {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  syllabus    String      @db.Text
  totalDays   Int
  hoursPerDay Float
  cards       DailyCard[]
  percentCompleted   Float @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
}

model DailyCard {
  id            String     @id @default(cuid())
  planId        String
  plan          StudyPlan  @relation(fields: [planId], references: [id], onDelete: Cascade)
  dayNumber     Int
  topics        String[]
  subtasks      String[]
  estimatedTime Float
  status        CardStatus @default(TODO)
  hasRevision   Boolean    @default(false)
  revisionTopics String[]  @default([])
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([planId])
  @@unique([planId, dayNumber])
}

enum CardStatus {
  TODO
  IN_PROGRESS
  DONE
}